
@{
    ViewBag.Title = "İlanlarım";
    Layout = "~/Views/Shared/_NestedLayout.cshtml";
}

<div class="row">
    <div class="shop-tab-area">
        <div class="shop-tab-list">
            <div class="shop-tab-pill pull-left">
                <ul>
                    <!-- <li class="" id="left"><a data-toggle="pill" href="#home"><i class="fa fa-th"></i><span>Grid</span></a></li> -->
                    <li class="active"><a data-toggle="pill" href="#menu1"><i class="fa fa-th-list"></i><span>List</span></a></li>
                </ul>
            </div>
            <div class="shop-tab-pill pull-right">
                <ul>
                    <li class="product-size-deatils">
                        <div class="show-label">
                            <label>Show : </label>
                            <select>
                                <option value="10" selected="selected">10</option>
                                <option value="09">09</option>
                                <option value="08">08</option>
                                <option value="07">07</option>
                                <option value="06">06</option>
                            </select>
                        </div>
                    </li>
                    <li class="product-size-deatils">
                        <div class="show-label">
                            <label><i class="fa fa-sort-amount-asc"></i>Sort by : </label>
                            <select>
                                <option value="position" selected="selected">Position</option>
                                <option value="Name">Name</option>
                                <option value="Price">Price</option>
                            </select>
                        </div>
                    </li>
                    <li class="shop-pagination"><a href="#">1</a></li>
                    <li class="shop-pagination"><a href="#">2</a></li>
                    <li class="shop-pagination"><a href="#">3</a></li>
                    <li class="shop-pagination"><a href="#">4</a></li>
                    <li class="shop-pagination"><a href="#">5</a></li>

                    <li class="shop-pagination"><a href="#"><i class="fa fa-caret-right"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="tab-content">
            <div id="menu1" class="tab-pane fade active in">
                <div class="row">
                    @foreach (Advert item in Model)
                    {
                        <div class="single-shop-product">
                            <div class="col-xs-12 col-sm-5 col-md-4">
                                <div class="left-item">
                                    <a href="#" title="@item.BookName" data-toggle="modal" data-target="#productModal" onclick="GetAdvertByID(@item.ID)">
                                        @if (string.IsNullOrEmpty(item.AdvertİmgUrl))
                                        {
                                            <img src="~/Content/home-img/featured/1.jpg" alt="">
                                        }
                                        else
                                        {
                                            <img src="@Url.Content(item.AdvertİmgUrl)" alt="@item.BookName" width="270" height="280" multiple/>
                                        }
                                    </a>
                                </div>
                            </div>
                            <div class="col-xs-12 col-sm-7 col-md-8">
                                <div class="deal-product-content">
                                    <h4>
                                        <a href="#" title="@item.BookName" data-toggle="modal" data-target="#productModal" onclick="GetAdvertByID(@item.ID)">
                                            @item.BookName
                                        </a>
                                    </h4>
                                    <div class="product-price">
                                        <span class="new-price">&#8378; @item.Price</span>
                                        @*<span class="old-price">$ 120.00</span>*@
                                    </div>
                                    <div class="list-rating-icon">
                                        @for (int i = 0; i < (int)item.Condition; i++)
                                        {
                                            <i class="fa fa-star icolor"></i>
                                        }
                                        @if ((int)item.Condition != 5)
                                        {
                                            for (int i = 0; i < 5 - (int)item.Condition; i++)
                                            {
                                                <i class="fa fa-star"></i>
                                            }
                                        }
                                    </div>
                                    <p>@item.Description</p>
                                    <div class="availability">
                                        <span>In stock</span>
                                        <span><a href="cart.html">Add to cart</a></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>